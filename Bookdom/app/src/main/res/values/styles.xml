<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BOTON" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:height">60dp</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="LINK" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/link_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TopDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CustomSpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <!-- Define el estilo para los elementos del Spinner -->
    <style name="CustomSpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Define el estilo para el menÃº desplegable del Spinner -->
    <style name="CustomSpinnerDropDownItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>